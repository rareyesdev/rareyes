{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "eslint-comments", "simple-import-sort"],
  "extends": ["plugin:eslint-comments/recommended"],
  "rules": {
    // Disallow Eslint comments that don't include a description
    "eslint-comments/require-description": "error",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^react", "^\\w", "^@\\w", "^", "^\\."],
          // Side effect imports.
          ["^\\u0000"],
          ["^@?\\w.*\\u0000$", "^[^.].*\\u0000$", "^\\..*\\u0000$"]
        ]
      }
    ]
  },
  "overrides": [
    {
      // JavaScript or TypeScript files
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      // TypeScript files
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        // Make sure that type imports are separated from the rest.
        "@typescript-eslint/consistent-type-imports": "error",
        // Disallow unused variables
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
            // Allow unused function arguments that start with an underscore
            "argsIgnorePattern": "^_",
            "ignoreRestSiblings": true
          }
        ]
      }
    },
    {
      // JavaScript files
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      // React JSX files
      "files": ["*.jsx", "*.tsx"],
      "rules": {
        "react/jsx-sort-props": [
          "error",
          {
            "ignoreCase": true,
            "reservedFirst": true,
            "shorthandFirst": true,
            "callbacksLast": true
          }
        ]
      }
    }
  ]
}
